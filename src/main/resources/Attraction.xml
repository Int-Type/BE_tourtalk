<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="world.ssafy.tourtalk.model.dao.AttractionDAO">
    <!-- 공통 SQL 조각: 기본 조회 쿼리 -->
    <sql id="baseSelect">
        SELECT 
            a.no, a.content_id, a.title, 
            a.content_type_id, c.content_type_name,
            s.sido_code, s.sido_name, g.gugun_code, g.gugun_name,
            a.latitude, a.longitude, a.map_level,
            a.first_image1, a.first_image2, a.tel,
            a.addr1, a.addr2, a.homepage, a.overview, a.view_cnt
        FROM 
            attractions a
        JOIN 
            contenttypes c ON a.content_type_id = c.content_type_id
        JOIN 
            sidos s ON a.area_code = s.no
        JOIN 
            guguns g ON a.si_gun_gu_code = g.key AND g.sido_code = s.sido_code
    </sql>
    
    <!-- 코드 값을 직접 사용하여 관광지 조회 -->
    <select id="getAttractionByDirectCodes" resultMap="attractionResultMap">
        <include refid="baseSelect"/>
        <where>
            <if test="contentTypeId > 0">
                a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
            <if test="gugunCode > 0">
                AND g.gugun_code = #{gugunCode}
            </if>
        </where>
    </select>
    
    <!-- 페이징 처리가 포함된 코드 기반 조회 -->
    <select id="getAttractionByDirectCodesWithPaging" resultMap="attractionResultMap">
        <include refid="baseSelect"/>
        <where>
            <if test="contentTypeId > 0">
                a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
            <if test="gugunCode > 0">
                AND g.gugun_code = #{gugunCode}
            </if>
        </where>
        ORDER BY a.no ASC
        LIMIT #{offset}, #{limit}
    </select>
    
    <!-- 조건에 맞는 총 항목 수 조회 -->
    <select id="getTotalCountByDirectCodes" resultType="int">
        SELECT COUNT(*)
        FROM attractions a
        JOIN sidos s ON a.area_code = s.no
        JOIN guguns g ON a.si_gun_gu_code = g.key AND g.sido_code = s.sido_code
        <where>
            <if test="contentTypeId > 0">
                a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
            <if test="gugunCode > 0">
                AND g.gugun_code = #{gugunCode}
            </if>
        </where>
    </select>
    
    <!-- SearchCondition을 활용한 동적 쿼리 -->
    <select id="searchAttractionsByCodes" parameterType="world.ssafy.tourtalk.model.dto.SearchCondition" resultMap="attractionResultMap">
        <include refid="baseSelect"/>
        <where>
            <if test="contentTypeId != null and contentTypeId > 0">
                a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode != null and sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
            <if test="gugunCode != null and gugunCode > 0">
                AND g.gugun_code = #{gugunCode}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (
                    a.title LIKE CONCAT('%', #{keyword}, '%') 
                    OR a.addr1 LIKE CONCAT('%', #{keyword}, '%')
                    OR a.overview LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="minViewCount != null and minViewCount > 0">
                AND a.view_cnt >= #{minViewCount}
            </if>
            <if test="onlyWithImage != null and onlyWithImage == true">
                AND a.first_image1 IS NOT NULL AND a.first_image1 != ''
            </if>
        </where>
        <choose>
            <when test="orderBy != null and orderBy == 'title'">
                ORDER BY a.title
                <if test="orderDirection != null">
                    ${orderDirection}
                </if>
            </when>
            <when test="orderBy != null and orderBy == 'viewCnt'">
                ORDER BY a.view_cnt
                <if test="orderDirection != null">
                    ${orderDirection}
                </if>
            </when>
            <otherwise>
                ORDER BY a.no
            </otherwise>
        </choose>
        <if test="pageSize != null and pageSize > 0">
            LIMIT #{offset}, #{pageSize}
        </if>
    </select>
    
    <!-- 관련 카운트 쿼리 -->
    <select id="countAttractionsByCodes" parameterType="world.ssafy.tourtalk.model.dto.SearchCondition" resultType="int">
        SELECT COUNT(*)
        FROM attractions a
        JOIN contenttypes c ON a.content_type_id = c.content_type_id
        JOIN sidos s ON a.area_code = s.no
        JOIN guguns g ON a.si_gun_gu_code = g.key AND g.sido_code = s.sido_code
        <where>
            <if test="contentTypeId != null and contentTypeId > 0">
                a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode != null and sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
            <if test="gugunCode != null and gugunCode > 0">
                AND g.gugun_code = #{gugunCode}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (
                    a.title LIKE CONCAT('%', #{keyword}, '%') 
                    OR a.addr1 LIKE CONCAT('%', #{keyword}, '%')
                    OR a.overview LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="minViewCount != null and minViewCount > 0">
                AND a.view_cnt >= #{minViewCount}
            </if>
            <if test="onlyWithImage != null and onlyWithImage == true">
                AND a.first_image1 IS NOT NULL AND a.first_image1 != ''
            </if>
        </where>
    </select>
    
    <!-- 단일 관광지 조회 -->
    <select id="getAttractionByNo" resultMap="attractionResultMap">
        <include refid="baseSelect"/>
        WHERE a.no = #{no}
    </select>
    
    <!-- 랜덤 관광지 조회 -->
    <select id="getRandomAttractions" resultMap="attractionResultMap">
        <include refid="baseSelect"/>
        <where>
            a.first_image1 IS NOT NULL AND a.first_image1 != ''
            <if test="contentTypeId != null and contentTypeId > 0">
                AND a.content_type_id = #{contentTypeId}
            </if>
            <if test="sidoCode != null and sidoCode > 0">
                AND s.sido_code = #{sidoCode}
            </if>
        </where>
        ORDER BY RAND()
        LIMIT #{count}
    </select>
    
    <!-- 조회수 증가 -->
    <update id="updateViewCount">
        UPDATE attractions 
        SET view_cnt = view_cnt + 1 
        WHERE no = #{no}
    </update>
    
    <!-- 조회수 기준 관광지 조회 -->
    <select id="allCountView" resultType="map">
        SELECT 
            a.no, a.title, s.sido_name, a.view_cnt 
        FROM 
            attractions a 
        JOIN 
            sidos s ON a.area_code = s.no
        WHERE 
            a.view_cnt >= 1
        ORDER BY 
            a.view_cnt DESC
    </select>
    
    <!-- 카테고리 목록 조회 -->
    <select id="getContent" resultType="map">
        SELECT 
            content_type_id AS id, 
            content_type_name AS name
        FROM 
            contenttypes
        ORDER BY 
            content_type_id
    </select>
    
    <!-- 시도 목록 조회 -->
    <select id="getSido" resultType="map">
        SELECT 
            sido_code AS id, 
            sido_name AS name
        FROM 
            sidos
        ORDER BY 
            sido_code
    </select>
    
    <!-- 구군 목록 조회 -->
    <select id="getGugun" resultType="map">
        SELECT 
            gugun_code AS id, 
            gugun_name AS name
        FROM 
            guguns
        WHERE 
            sido_code = #{code}
        ORDER BY 
            gugun_code
    </select>
    
    <!-- 결과 매핑 -->
    <resultMap id="attractionResultMap" type="world.ssafy.tourtalk.model.dto.Attraction">
        <result property="no" column="no"/>
        <result property="contentId" column="content_id"/>
        <result property="title" column="title"/>
        <result property="contentTypeId" column="content_type_id"/>
        <result property="contentTypeName" column="content_type_name"/>
        <result property="sidoCode" column="sido_code"/>
        <result property="sido" column="sido_name"/>
        <result property="gugunCode" column="gugun_code"/>
        <result property="gugun" column="gugun_name"/>
        <result property="firstImage1" column="first_image1"/>
        <result property="firstImage2" column="first_image2"/>
        <result property="mapLevel" column="map_level"/>
        <result property="latitude" column="latitude"/>
        <result property="longitude" column="longitude"/>
        <result property="tel" column="tel"/>
        <result property="addr" column="addr1"/>
        <result property="addr2" column="addr2"/>
        <result property="homepage" column="homepage"/>
        <result property="overview" column="overview"/>
        <result property="viewCnt" column="view_cnt"/>
    </resultMap>
</mapper>